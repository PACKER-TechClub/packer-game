---
import image from "../../../public/images/packer.png?url"
import dataset from "../../../public/rakinator.json"
import OdaiSelector from "../../components/OdaiSelector.jsx"
---

<html lang="ja">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>逆アキネーター</title>
</head>
<body class="bg-orange-100 font-semibold min-h-screen ">
	  <button onclick="history.back()" class="mt-1 ml-1 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 rounded">
        戻る
    </button>
		<div class="flex flex-col items-center">
			 <img src={image} alt="PACKER" class="w-1/4 mx-auto my-5">
			 <h1 class="text-2xl md:text-4xl lg:text-5xl text-center font-bold ">カタカナ禁止</h1>
    	<div class=" px-4 my-4">
        	<OdaiSelector OdaiList={dataset} client:load/>
    	</div>
		</div>
   
</body>
</html>
